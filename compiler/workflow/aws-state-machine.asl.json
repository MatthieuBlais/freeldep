{
  "StartAt": "Run tests?",
  "States": {
    "Run tests?": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.Test",
          "StringEquals": "",
          "Next": "Deploy?"
        }
      ],
      "Default": "Test template"
    },
    "Test template": {
      "Type": "Task",
      "Resource": "arn:aws:states:::codebuild:startBuild.sync",
      "Parameters": {
        "JobName": "{{ StackPrefix }}-deployer-tests",
        "EnvironmentVariablesOverride": [
          {
            "Name": "ARTIFACTS_BUCKET",
            "Type": "PLAINTEXT",
            "Value": "{{ ArtifactBucket }}"
          },
          {
            "Name": "TEST_TEMPLATE_LOCATION",
            "Type": "PLAINTEXT",
            "Value.$": "$.Test"
          }
        ]
      },
      "Catch": [ {
          "ErrorEquals": [ "States.ALL" ],
          "Next": "Deployment failed"
      } ],
      "Next": "Deploy?"
    },
    "Deploy?": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.Valid",
          "BooleanEquals": true,
          "Next": "Deploy template"
        },
        {
          "Variable": "$.Valid",
          "BooleanEquals": false,
          "Next": "Deployment failed"
        }
      ]
    },
    "Deploy template": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{ AwsRegion }}:{{ AwsAccountId }}:function:{{ StackPrefix }}-deployer-deploy-template",
      "Next": "Wait 10s"
    },
    "Wait 10s": {
      "Type": "Wait",
      "Seconds": 10,
      "Next": "Status"
    },
    "Status": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{ AwsRegion }}:{{ AwsAccountId }}:function:{{ StackPrefix }}-deployer-get-status",
      "Next": "Is deployed?"
    },
    "Is deployed?": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.Status",
          "StringEquals": "SUCCESS",
          "Next": "Success"
        },
        {
          "Variable": "$.Status",
          "StringEquals": "FAIL",
          "Next": "Keep failed?"
        }
      ],
      "Default": "Wait 10s"
    },
    "Keep failed?": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.KeepFailed",
          "BooleanEquals": false,
          "Next": "Clean-up"
        }
      ],
      "Default":"Deployment failed"
    },
    "Clean-up": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{ AwsRegion }}:{{ AwsAccountId }}:function:{{ StackPrefix }}-deployer-keepfailed",
      "Next": "Deployment failed"
    },
    "Success": {
      "Type": "Succeed"
    },
    "Deployment failed": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{ AwsRegion }}:{{ AwsAccountId }}:function:{{ StackPrefix }}-deployer-failed",
      "Next": "Fail"
    },
    "Fail": {
      "Type": "Fail",
      "Cause": "$.Error.Cause"
    }
  }
}
